<resources>
    <!-- Base application theme. -->
    <style name="Theme.Amita" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/status_bar_color</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="huge_title_bold">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">@dimen/_24sdp</item>
        <item name="android:layout_marginRight">@dimen/_24sdp</item>
        <item name="android:textColor">@color/orange3</item>
        <item name="android:textSize">70sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="title_3_bold">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">51dp</item>
        <item name="android:layout_marginRight">51dp</item>
        <item name="android:textColor">@color/gray2</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="caption">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">@dimen/_2sdp</item>
        <item name="android:textColor">@color/gray1</item>
        <item name="android:textSize">12sp</item>
        <item name="fontStyle">normal</item>
    </style>

    <style name="form_field">
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginStart">0dp</item>
        <item name="android:layout_marginEnd">0dp</item>
        <item name="android:paddingEnd">@dimen/_8sdp</item>
        <item name="android:background">@drawable/form_field_white</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textCursorDrawable">@drawable/cursor_gray1</item>
    </style>

    <style name="buttonGray">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">52dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/btn_gray_select</item>
    </style>


    <style name="letter_case">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/_8sdp</item>
        <item name="android:paddingStart">@dimen/_17sdp</item>
        <item name="android:paddingEnd">@dimen/_17sdp</item>
        <item name="android:paddingTop">@dimen/_2sdp</item>
        <item name="android:paddingBottom">@dimen/_2sdp</item>
        <item name="android:textColor">@color/gray4</item>
        <item name="android:textSize">22sp</item>
        <item name="flow_verticalAlign">center</item>
        <item name="fontStyle">normal</item>
    </style>
</resources>